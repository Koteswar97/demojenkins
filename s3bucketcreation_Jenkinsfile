pipeline {
    agent any

    stages {
        stage('Configure AWS Credentials') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'aws-s3-creds',
                    accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                    secretKeyVariable: 'AWS_SECRET_ACCESS_KEY'
                ]]) {
                    sh 'aws sts get-caller-identity'
                }
            }
        }

        stage('Create S3 Bucket') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'aws-s3-creds',
                    accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                    secretKeyVariable: 'AWS_SECRET_ACCESS_KEY'
                ]]) {
                    sh '''
                        echo "Creating S3 bucket: koteshbucket-767397794296123 in region: us-east-1"
                        aws s3api create-bucket --bucket koteshbucket-767397794296123 --region us-east-1 --create-bucket-configuration LocationConstraint=ap-southeast-1 || echo "Bucket may already exist"
                        echo "Verifying bucket..."
                        aws s3 ls | grep koteshbucket-767397794296123 || echo "Bucket not found"
                    '''
                }
            }
        }
    }
}
